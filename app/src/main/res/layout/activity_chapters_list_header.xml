<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="300sp"
		>

		<ImageView
			android:id="@+id/coverImageBackground"
			android:layout_width="match_parent"
			android:layout_height="299sp"
			android:alpha="0.20"
			tools:src="@mipmap/ic_logo"
			/>

		<View
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/background_gradient_upwards"
			/>
	</FrameLayout>

	<LinearLayout

		android:id="@+id/header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingTop="74dp"
		>

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:columnCount="2"
			android:orientation="horizontal"
			>

			<ImageView
				android:id="@+id/cover_image"
				android:layout_width="120dp"
				android:layout_height="0dp"
				android:layout_margin="12sp"
				app:layout_constraintDimensionRatio="1:1.5"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toLeftOf="@id/bookInfo"
				app:layout_constraintTop_toTopOf="parent"
				tools:src="@mipmap/ic_logo"
				/>

			<LinearLayout
				android:id="@+id/bookInfo"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:animateLayoutChanges="true"
				android:columnCount="2"
				android:orientation="vertical"
				android:paddingTop="12sp"
				android:paddingEnd="12sp"
				app:layout_constraintBottom_toTopOf="@id/actionButtons"
				app:layout_constraintLeft_toRightOf="@id/cover_image"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				>

				<TextView
					android:id="@+id/bookTitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="20sp"
					android:textStyle="bold"
					tools:text="Book name"
					/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:alpha="0.6"
					>

					<TextView
						android:id="@+id/sourceName"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						tools:text="source name"
						/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:alpha="0.6"
					>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingEnd="6sp"
						android:text="@string/chapters"
						android:textStyle="bold"
						/>

					<TextView
						android:id="@+id/numberOfChapters"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						tools:text="23"
						/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/actionButtons"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:orientation="horizontal"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toRightOf="@id/cover_image"
				>

				<ImageButton
					android:id="@+id/databaseSearchButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@null"
					android:clickable="true"
					android:foreground="@drawable/item_foreground_ripple"
					android:padding="10dp"
					android:src="@drawable/ic_outline_explore_24"
					android:tooltipText="@string/search_in_database_for_more_information"
					/>

				<ImageButton
					android:id="@+id/webpageOpenButton"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@null"
					android:clickable="true"
					android:foreground="@drawable/item_foreground_ripple"
					android:padding="10dp"
					android:src="@drawable/ic_outline_website_24"
					android:tooltipText="@string/open_in_browser"
					/>

			</LinearLayout>
		</androidx.constraintlayout.widget.ConstraintLayout>

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:animateLayoutChanges="true"
			>

			<TextView
				android:id="@+id/bookDescription"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:ellipsize="end"
				android:maxLines="4"
				android:minLines="1"
				android:paddingLeft="12sp"
				android:paddingTop="12sp"
				android:paddingRight="12sp"
				android:scrollbars="vertical"
				tools:text="This is the book description/synopsis."
				tools:visibility="visible"

				/>
		</ScrollView>

		<View
			android:layout_width="match_parent"
			android:layout_height="1sp"
			android:layout_marginVertical="6dp"
			android:alpha="0.05"
			android:background="?colorOnPrimary"
			/>

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:animateLayoutChanges="true"
			>

			<TextView
				android:id="@+id/errorMessage"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="monospace"
				android:maxLines="10"
				android:padding="17sp"
				android:scrollbars="vertical"
				android:textColor="#EC4427"
				android:textIsSelectable="true"
				android:textSize="14sp"
				android:textStyle=""
				android:visibility="gone"
				tools:text="Error:\nError message\n\nReason:\nReason message\n\nError stack:\nCall stack tree "
				tools:visibility="visible"
				/>
		</ScrollView>

		<androidx.constraintlayout.widget.Guideline
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="#fff"
			android:paddingHorizontal="30dp"
			android:paddingVertical="50dp"
			/>
	</LinearLayout>

</FrameLayout>