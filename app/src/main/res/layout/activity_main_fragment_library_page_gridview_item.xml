<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tool="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:focusable="true"
	android:orientation="vertical"
	tool:showIn="@layout/activity_main_fragment_library_page"
	>
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/book"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginHorizontal="4sp"
		android:layout_marginVertical="8sp"
		android:background="@drawable/book_item_background"
		android:foreground="@drawable/book_item_foreground_ripple"
		android:padding="8sp"
		app:layout_constraintDimensionRatio="4:3"
		app:layout_constraintHeight_default="percent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		>
		
		<TextView
			android:id="@+id/unreadChaptersCounter"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="0sp"
			android:animateLayoutChanges="true"
			android:background="@drawable/chapter_counter_bg"
			android:clickable="false"
			android:paddingHorizontal="8sp"
			android:paddingVertical="2sp"
			android:textSize="15sp"
			android:textStyle="bold"
			android:visibility="invisible"
			app:layout_constraintBottom_toTopOf="@+id/title"
			app:layout_constraintHeight_default="spread"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_chainStyle="spread_inside"
			tool:visibility="visible"
			/>
		
		<TextView
			android:id="@+id/title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clickable="false"
			android:ellipsize="end"
			android:maxLines="5"
			android:textSize="15sp"
			android:textStyle="bold"
			app:layout_constrainedHeight="true"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@id/unreadChaptersCounter"
			app:layout_constraintVertical_chainStyle="spread_inside"
			/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>