<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/reader"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
	
	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clickable="false"
		android:defaultFocusHighlightEnabled="false"
		android:divider="@null"
		android:hapticFeedbackEnabled="false"
		android:listSelector="#0000"
		android:longClickable="false"
		android:scrollbars="none"
		tools:listitem="@layout/activity_reader_list_item"
		/>
	
	<LinearLayout
		android:id="@+id/settingsPanel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:layout_marginHorizontal="10sp"
		android:layout_marginBottom="60sp"
		android:animateLayoutChanges="true"
		android:background="@drawable/background_round"
		android:padding="5sp"
		android:visibility="invisible"
		tools:visibility="visible"
		>
		
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="5sp"
			android:background="@drawable/ic_twotone_format_size_24"
			android:padding="15sp"
			tools:text="Setting"
			/>
		
		<com.google.android.material.slider.Slider
			android:id="@+id/settingTextSize"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:stepSize="1"
			android:value="14"
			android:valueFrom="8"
			android:valueTo="24"
			app:labelBehavior="floating"
			app:thumbColor="?attr/colorOnSecondary"
			app:trackColor="?attr/colorOnSecondary"
			app:trackColorActive="?attr/colorAccent"
			/>
	</LinearLayout>


</FrameLayout>