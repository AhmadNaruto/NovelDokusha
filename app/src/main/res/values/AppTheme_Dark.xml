<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar.Bridge">
		<item name="isLightTheme">false</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:statusBarColor">?attr/colorPrimary</item>
		
		<item name="colorAccent">#2A59B6</item>
		<item name="colorPrimary">@color/dark_20</item>
		<item name="android:colorBackground">@color/dark_18</item>
		<item name="colorOnPrimary">?attr/colorPrimary</item>
		<item name="colorSecondary">?attr/colorPrimary</item>
		<item name="colorOnSecondary">#aaa</item>
		<item name="colorOnBackground">#888</item>
		
		<item name="bottomNavigationStyle">@style/myBottomNavigationStyle</item>
		<item name="buttonStyle">@style/myButtonStyle</item>
		<item name="myReaderTextStyle">@style/myReaderTextStyle.Dark</item>
		<item name="tabStyle">@style/myTabLayout</item>
		<item name="appBarLayoutStyle">@style/myAppBarLayoutStyle</item>
		
		<item name="noneStateTint">#ddd</item>
		<item name="positiveStateTint">#71A30E</item>
		<item name="negativeStateTint">#C81414</item>
		
		<item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
	</style>
	
	<style name="myReaderTextStyle.Dark">
		<item name="android:textColor">#ddd</item>
	</style>

</resources>